<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CreateController">
   <children>
      <BorderPane prefHeight="800.0" prefWidth="1000.0">
         <top>
            <GridPane prefHeight="75.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="38.0" minHeight="10.0" prefHeight="15.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="47.0" minHeight="10.0" prefHeight="47.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <MenuBar prefHeight="32.0" prefWidth="835.0" GridPane.columnSpan="5">
                    <menus>
                      <Menu mnemonicParsing="false" text="File">
                        <items>
                              <MenuItem mnemonicParsing="false" onAction="#openFunction" text="Open" />
                        <MenuItem mnemonicParsing="false" onAction="#saveFunction" text="Save" />
                          <MenuItem mnemonicParsing="false" onAction="#closeFunction" text="Close" />
                        </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Edit">
                        <items>
                          <MenuItem mnemonicParsing="false" onAction="#undoFunction" text="Undo" />
                          <MenuItem mnemonicParsing="false" onAction="#redoFunction" text="Redo" />
                          <MenuItem mnemonicParsing="false" onAction="#clearFunction" text="Clear All" />
                        </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Help">
                        <items>
                          <MenuItem mnemonicParsing="false" text="About" />
                        </items>
                      </Menu>
                    </menus>
                  </MenuBar>
                  <TextField fx:id="txtFd" prefHeight="31.0" prefWidth="345.0" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                  <Button fx:id="top" mnemonicParsing="false" onAction="#topLine" text="Insert Top Line" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <Button fx:id="bottom" mnemonicParsing="false" onAction="#bottomLine" text="Insert Bottom Line" GridPane.columnIndex="3" GridPane.rowIndex="1" />
               </children>
            </GridPane>
         </top>
         <center>
            <StackPane fx:id="pane" prefHeight="690.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
               <children>
                  <Group fx:id="group">
                     <children>
                        <ImageView fx:id="imgView" fitHeight="700.0" fitWidth="980.0" layoutX="45.0" layoutY="-14.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </Group>
               </children>
            </StackPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
